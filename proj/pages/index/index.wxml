<view class='content center'>
  <view class='body in_block'>
    <view class='h1'>
    {{point}}
    </view>
    <view class='select in_block'>
      <view class='restart fl' bindtap='restart'>
        <image src='../../image/restart.png'></image>
      </view>
      <view class='play_img fl' bindtap='go'>
        <image wx:if="{{play}}" src='../../image/play.png'></image>
        <image wx:if="{{pause}}" src='../../image/pause.png'></image>
      </view>
    </view>  
    <view class=''></view>
  </view>  
</view>

